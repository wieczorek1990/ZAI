<h1>Listing clinics</h1>

<table class="grid">
  <tr>
    <th>Name</th>
    <th></th>
    <th>Actions</th>
    <th></th>
  </tr>

<% @clinics.each do |clinic| %>
  <tr>
    <td><%= clinic.name %></td>
    <td><button text="Show"><%= link_to 'Show', clinic %></button></td>
    <td><button text="Edit"><%= link_to 'Edit', edit_clinic_path(clinic) %></button></td>
    <td><button text="Destroy"><%= link_to 'Destroy', clinic, confirm: 'Are you sure?', method: :delete %></button></td>
  </tr>
<% end %>
</table>

<br />
<br />
<button text="New Clinic">
<%= link_to 'New Clinic', new_clinic_path %></button> <hr />
