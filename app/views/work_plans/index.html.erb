<h1>Listing work plans</h1>

<table class="grid">
  <tr>
    <th>Clinic</th>
    <th>Doctor</th>
    <th>Day</th>
    <th>Start</th>
    <th>Stop</th>
    <th></th>
    <% unless current_user.is_a?(Patient) %>
      <th></th>
      <th></th>
    <% end %>
  </tr>

<% @work_plans.each do |work_plan| %>
  <tr>
    <td><%= work_plan.clinic_doctor.clinic ? work_plan.clinic_doctor.clinic.name : '-' %></td>
    <td><%= work_plan.clinic_doctor.doctor ? work_plan.clinic_doctor.doctor.summary : '-' %></td>
    <td><%= format_days work_plan.day %></td>
    <td><%= format_hours work_plan.start.in_time_zone %></td>
    <td><%= format_hours work_plan.stop.in_time_zone %></td>
    <td><button text="Show"><%= link_to 'Show', work_plan %></td>
    <% unless current_user.is_a?(Patient) %></button>
      <td><button text="Edit"><%= link_to 'Edit', edit_work_plan_path(work_plan) %></button></td>
      <td><button text="Destroy"><%= link_to 'Destroy', work_plan, confirm: 'Are you sure?', method: :delete %></button></td>
    <% end %>
  </tr>
<% end %>
</table>

<% unless current_user.is_a?(Patient) %>
<br />
<br />
<button text="New Work plan">
<%= link_to 'New Work plan', new_work_plan_path %></button><hr/>
<% end %>
