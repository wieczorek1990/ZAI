<h1>Listing work plans</h1>

<table>
  <tr>
    <th>Clinic</th>
    <th>Day</th>
    <th>Start</th>
    <th>Stop</th>
    <th></th>
    <th>Actions</th>
    <th></th>
  </tr>

<% @doctor_work_plans.each do |work_plan| %>
  <tr>
    <td><%= work_plan.clinic_doctor.clinic ? work_plan.clinic_doctor.clinic.name : '-' %></td>
    <td><%= format_days work_plan.day %></td>
    <td><%= format_hours work_plan.start %></td>
    <td><%= format_hours work_plan.stop %></td>
    <td><button text="Show"><%= link_to 'Show', work_plan %></button></td>
    <td><button text="Edit"><%= link_to 'Edit', edit_work_plan_path(work_plan) %></button></td>
    <td><button text="Destroy"><%= link_to 'Destroy', work_plan, confirm: 'Are you sure?', method: :delete %></button></td>
  </tr>
<% end %>
</table>

<br />
<br />
<button text="New Work plan">
<%= link_to 'New Work plan', new_work_plan_path %></button><hr />
