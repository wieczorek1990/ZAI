<h1>Listing appointments</h1>

<table class="table table-stripped grid">
  <tr>
    <th>Clinic</th>
    <th>Doctor</th>
    <th>Date</th>
    <th>Start</th>
    <th>Stop</th>
    <% if current_user.is_a?(Patient) || current_user.is_a?(Admin) %>
      <th>Status</th>
    <% end %>
    <th><%# Show %></th>
<th/>
    <% if current_user.is_a?(Admin) %>
      <th><%# Edit %></th>
      <th><%# Destroy %></th>
    <% end %>
  </tr>

<% @appointments.each do |appointment| %>
  <tr>
    <td><%= appointment.clinic_doctor.clinic.name %></td>
    <td><%= [appointment.clinic_doctor.doctor.first_name, appointment.clinic_doctor.doctor.last_name].join(' ') %></td>
    <td><%= format_date appointment.date %></td>
    <td><%= format_hours appointment.start %></td>
    <td><%= format_hours appointment.stop %></td>
    <% if current_user.is_a?(Patient) || current_user.is_a?(Admin) %>
      <td>
        <% if appointment.confirmed? %>
          <%= 'Confirmed' %>
        <% else %>
          <% if appointment.can_confirm? %>
            <%= button_to 'Confirm', {:controller => 'appointments', :action => 'confirm', :id => appointment.id}, :method => :put %>
          <% else %>
              <%= 'Canceled' %>
          <% end %>
        <% end %>
      </td>
    <% end %>
    <td><button text="Show"><%= link_to 'Show', appointment, class: "btn btn-primary" %></button></td>
    <% if current_user.is_a?(Admin) %>
     <td><button text="Edit"><%= link_to 'Edit', edit_appointment_path(appointment) %></button></td>
    <% end %>
    <td><button text="Destroy"><%= link_to 'Destroy', appointment, class: "btn btn-danger" , confirm: 'Are you sure?', method: :delete %></button></td>
  </tr>
<% end %>
</table>

<br />
<br />
<button text="New Appointment">
<% unless current_user.is_a?(Doctor) %>
  <%= link_to 'New Appointment', new_appointment_path %>
<% end %></button><hr />
