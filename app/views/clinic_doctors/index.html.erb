<h1>Listing clinic doctors</h1>

<table class="grid">
  <tr>
    <th>Clinic</th>
    <th>Doctor</th>
    <th></th>
    <th>Actions</th>
    <th></th>
  </tr>

<% @clinic_doctors.each do |clinic_doctor| %>
  <tr>
    <td><%= clinic_doctor.clinic ? clinic_doctor.clinic.name : '-' %></td>
    <td><%= clinic_doctor.doctor ? clinic_doctor.doctor.summary : '-' %></td>
    <td><button text="Show"><%= link_to 'Show', clinic_doctor %></button></td>
    <td><button text="Edit"><%= link_to 'Edit', edit_clinic_doctor_path(clinic_doctor) %></button></td>
    <td><button text="Destroy"><%= link_to 'Destroy', clinic_doctor, confirm: 'Are you sure?', method: :delete %></button></td>
  </tr>
<% end %>
</table>

<br />
<br />
<button text="New Clinic">
<%= link_to 'New Clinic doctor', new_clinic_doctor_path %>
</button> <hr />
