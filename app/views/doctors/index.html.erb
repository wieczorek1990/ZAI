<h1>Listing doctors</h1>

<table class="grid">
  <tr>
    <th>Email</th>
    <th>First name</th>
    <th>Last name</th>
    <th>Pzw</th>
    <th />
    <th>Actions</th>
    <th />
  </tr>

<% @doctors.each do |doctor| %>
  <tr>
    <td><%= doctor.email%></td>
    <td><%= doctor.first_name %></td>
    <td><%= doctor.last_name %></td>
    <td><%= doctor.pzw %></td>
    <td><%= link_to 'Show', doctor, class:"btn" %></td>
    <td><%= link_to 'Edit', edit_doctor_path(doctor) , class:"btn"%></td>
    <td><%= link_to 'Destroy', doctor, confirm: 'Are you sure?', method: :delete , class:"btn"%></td>
  </tr>
<% end %>
</table>

<br />
<br />
<%= link_to 'New Doctor', new_doctor_path, class:"btn" %> <hr />
