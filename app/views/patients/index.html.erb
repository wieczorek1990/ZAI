<h1>Listing patients</h1>

<table class="grid">
  <tr>
    <th>Email</th>
    <th>First name</th>
    <th>Last name</th>
    <th>Pesel</th>
    <th>Address</th>
    <th>Postal code</th>
    <th>City</th>
    <th></th>
    <th>Actions</th>
    <th></th>
  </tr>

<% @patients.each do |patient| %>
  <tr>
    <td><%= patient.email%></td>
    <td><%= patient.first_name %></td>
    <td><%= patient.last_name %></td>
    <td><%= patient.pesel %></td>
    <td><%= patient.address %></td>
    <td><%= patient.postal_code %></td>
    <td><%= patient.city %></td>
    <td><%= link_to 'Show', patient, class:"btn" %></td>
    <td><%= link_to 'Edit', edit_patient_path(patient), class:"btn" %></td>
    <td><%= link_to 'Destroy', patient, confirm: 'Are you sure?', method: :delete , class:"btn"%></td>
  </tr>
<% end %>
</table>

